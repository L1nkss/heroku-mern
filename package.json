{
  "name": "l1nks-movie-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test-commit": "git add . && git commit -m 'test' && git push heroku master ",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "concurrently \"cd server && nodemon index.ts'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "start:prod": "cd server && node index.ts",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && tsx index.ts",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "heroku-postbuild": "npm run build",
    "install": "concurrently \"cd server && npm i\" \"cd client && npm i\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/L1nkss/heroku-mern.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/L1nkss/heroku-mern/issues"
  },
  "homepage": "https://github.com/L1nkss/heroku-mern#readme",
  "dependencies": {
    "concurrently": "^5.3.0",
    "if-env": "^1.0.4",
    "rimraf": "^3.0.2"
  }
}
